<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/spacing_small"
    android:layout_marginBottom="@dimen/spacing_small"
    android:paddingStart="@dimen/spacing_small"
    android:paddingEnd="@dimen/spacing_small"
    android:paddingTop="@dimen/spacing_small"
    android:paddingBottom="@dimen/spacing_small">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/ruleVerificationResultHeader"
        style="@style/Dgc.Text.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_hcert_invalid_small"
        android:drawablePadding="@dimen/spacing_small"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Failed"
        tools:textColor="@color/red" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/ruleVerificationRuleTitle"
        style="@style/Dgc.Text.Bold.Grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:text="@string/rule" />

    <TextView
        android:id="@+id/description"
        style="@style/Dgc.Text.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Rule description" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/ruleVerificationCurrentTitle"
        style="@style/Dgc.Text.Bold.Grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:text="@string/current" />

    <TextView
        android:id="@+id/current"
        style="@style/Dgc.Text.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Really long current description. Really long current description. Really long current description. Really long current description. Really long current description. Really long current description." />

</LinearLayout>